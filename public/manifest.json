{
  "manifest_version": 3,
  "name": "Sideway Notepad",
  "version": "1.0.0",
  "description": "A simple notepad app that opens in Chrome's sidepanel",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Sideway Notepad"
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}